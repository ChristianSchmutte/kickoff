// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Activity {
  id                      Int       @id @default(autoincrement())
  title                   String
  description             String
  participants            User[]    @relation("user_activity")
  organizer               User    @relation(fields: [organizerId], references: [id])
  organizerId             Int
  location                Location @relation(fields: [locationId], references: [id])
  locationId              Int
  sport                   Sport   @relation(fields: [sportId], references: [id])
  sportId                 Int
}

model User {
  id                      Int         @id @default(autoincrement())
  firstname               String
  lastname                String
  friends                 User[]      @relation("friends", references: [id])
  friendsRelation         User[]      @relation("friends", references: [id])
  activites               Activity[]  @relation("user_activity")
  organizedActivities     Activity[]
}

model Sport {
  id                      Int         @id @default(autoincrement())
  title                   String
  activites               Activity[]
}

model Location {
  id                      Int         @id @default(autoincrement())
  name                    String
  latitude                Float
  longitude               Float
  activites               Activity[]
}